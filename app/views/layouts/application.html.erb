<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
    <script src="https://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-dark bg-inverse">
          <a class="navbar-brand" href="#">The Sorcerer's Cloakroom</a>
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav float-xs-right">
            <% if user_signed_in? %>
              <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
          <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
              </li>
          <% end %>
          </ul>
        </nav>

      <% if notice.present? %>
        <p class="notice alert-info"><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <b>Instructors</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
            <%= link_to 'My Dashboard', dashboard_path %>
        </div>
        <div class="col-xs-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', team_path %>
          <br />
          <%= link_to 'Careers', careers_path %>
          <br />
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
        <div class="col-xs-12 col-sm-3">
          <b>Contact</b>
          <br />
          michaelsd.se@gmail.com
          <br />
          Buckingham Palace
          <br />
          London SW1A 1AA, UK
        </div>
        <div class="col-xs-12 col-sm-3">
          <b>Social</b>
          <br />
          <br />
          <%= link_to 'https://github.com/michael-sd' do %>
            <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          <%= link_to "#" do %>
            <span class="fa fa-facebook-square fa-2x social-button"></span>
          <% end %>
          <%= link_to "https://twitter.com/michaelsd_" do %>
            <span class="fa fa-twitter-square fa-2x social-button"></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
