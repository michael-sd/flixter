<br />
<div class="booyah-box col-xs-10 offset-xs-1">
  <h1 class="text-xs-center"><%= @course.title %></h1>
  <br />
  <%= link_to 'Preview As Student...', course_path(@course), class: 'btn btn-warning float-xs-right' %>
  <br class="clr">

  <div class="text-xs-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %> 
  </div>

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
      </li>
    <% end %>
  </ul>
  
  <h1 class="text-xs-center"><%= @course.description %></h1>
  <h1 class="text-xs-center"><%= @course.cost %></h1>
</div>